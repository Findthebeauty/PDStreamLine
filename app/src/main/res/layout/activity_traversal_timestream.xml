<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activities.TraversalTimestreamActivity">

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/cell_border"
            android:layout_margin="2dp"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/head"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:padding="1dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    android:textSize="17sp"
                    android:text="天有纯鲜牛奶780ml天有纯鲜牛奶780ml天有纯鲜牛奶780ml天有纯鲜牛奶780ml天有纯鲜牛奶780ml"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="1dp"
                    android:layout_margin="1dp"
                    android:text="302503"/>
            </LinearLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/timestream_border"
                android:layout_margin="2dp"
                android:id="@+id/timestream">

                <TextView
                    android:id="@+id/buy_pd_name"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    android:padding="1dp"
                    android:text="光明杯酸原味320g"
                    android:textSize="15sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/buy_dop"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/give_away_pd_name"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    app:layout_constraintTop_toBottomOf="@id/buy_pd_name"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/buy_dop"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    android:padding="1dp"
                    android:text="光明杯酸原味320g光明杯酸原味320g光明杯酸原味320g光明杯酸原味320g"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/buy_dop"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:inputType="number"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    android:padding="1dp"
                    android:selectAllOnFocus="true"
                    android:text="2022-06-22"
                    android:textSize="15sp"
                    app:layout_constraintBottom_toBottomOf="@+id/buy_pd_name"
                    app:layout_constraintRight_toLeftOf="@id/specs"
                    app:layout_constraintTop_toTopOf="@+id/buy_pd_name" />
                <LinearLayout
                    android:id="@+id/specs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent">
                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="10"
                        android:textSize="17sp"
                        android:layout_marginStart="10dp"
                        android:inputType="number"
                        android:selectAllOnFocus="true"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:layout_marginEnd="10dp"
                        android:textSize="15sp"
                        android:text="组"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/give_away_dop"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toBottomOf="@id/buy_pd_name"
                    app:layout_constraintLeft_toLeftOf="@id/buy_dop"
                    app:layout_constraintRight_toRightOf="@id/buy_dop"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    android:padding="1dp"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:text="2022-06-22"/>

                <TextView
                    android:id="@+id/give_away_flag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:alpha="0.3"
                    android:rotation="-38"
                    android:text="赠"
                    android:textAlignment="center"
                    android:textColor="@color/orange"
                    android:textSize="30sp"
                    app:layout_constraintLeft_toLeftOf="@id/give_away_dop"
                    app:layout_constraintRight_toRightOf="@id/give_away_dop"
                    app:layout_constraintBottom_toBottomOf="@id/give_away_dop"
                    app:layout_constraintTop_toTopOf="@id/give_away_dop"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>
    </LinearLayout>
</ScrollView>